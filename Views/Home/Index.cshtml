                $("#createBlockContractor").css('display', 'block');
                $("#editBlockContractor").css('display', 'none');
                $.ajax({
                    url: '/api/contractors',
                    type: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        WriteResponse(data);
