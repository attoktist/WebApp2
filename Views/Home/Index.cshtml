            function GetAnalyticsOperation() {
                
                var cont = $('#filterAnalyticsContractorsOperation').val();
                var art = $('#filterAnalyticsArticlesOperation').val();
                var filter = {
                    StartDate: $('#filterAnalyticsStartDate').val(),
                    EndDate: $('#filterAnalyticsEndDate').val(),
                    Contractors: cont,
                    Articles: art
                }
                $.ajax({
                    url: '/Analytics/Operations',
                    type: 'POST',
                    data: JSON.stringify(filter),
                    contentType: "application/json;charset=utf-8",
                    success: function (response) {
                        WriteAnalyticsOperation(response);
                    },
                    error: function (x, y, z) {
                        alert(x + '\n' + y + '\n' + z);
                    }
                });
            }

