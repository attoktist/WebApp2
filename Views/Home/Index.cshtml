                    var name = $('select[name="filCont"] option[value="' + mass[0] + '"]').text();
                    strResult += "<tr><td>"+name+"</td><td>" + mass[1] + "</td><td>" + mass[2] + "</td><td>" + mass[3] + "</td ><td>" +
                        mass[4] + "</td><td>" + mass[5] + "</td><td>" + mass[6] + "</td ></tr>";
                });
