            //----------------------Article---------------------------------
            // Получение всех статей по ajax-запросу
            function GetAllArticles() {

                $("#createBlockArticle").css('display', 'block');
                $("#editBlockArticle").css('display', 'none');
                GetAllArticlesForEdit();
                $.ajax({
                    url: '/api/articles',
                    type: 'GET',
